# Production Environment Variables
# Copy this file to .env.production and update values

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=sqlite:///storage/underwriting.db
# For PostgreSQL (optional):
# DATABASE_URL=postgresql://underwrite_user:password@db:5432/underwriting

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=120

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# External API Keys (add as needed)
# HAZARD_API_KEY=your-hazard-api-key
# ADDRESS_API_KEY=your-address-api-key

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your-grafana-password

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.png

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Logging Configuration
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Performance Settings
RAG_CACHE_TTL=1800  # 30 minutes
EMBEDDING_CACHE_SIZE=1000
MAX_CONCURRENT_WORKFLOWS=10
WORKFLOW_TIMEOUT=300  # 5 minutes

# Security Headers
SECURE_HEADERS=true
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true
FRAME_OPTIONS=DENY

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_AWS_ACCESS_KEY=your-aws-access-key
BACKUP_AWS_SECRET_KEY=your-aws-secret-key
